{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"experimentalDecorators": true,
		"ignoreDeprecations": "5.0",
		"skipLibCheck": true,
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#utils/*": ["lib/util/*"],
			"#lib/*": ["lib/*"],
			"#root/*": ["*"],
			"#data/*": ["lib/data/*"]
		},
		"composite": true
	}
}
